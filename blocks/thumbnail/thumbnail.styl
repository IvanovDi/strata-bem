.thumbnail
  &__link
    position relative
    display block
    color #eee
    &:before, &:after
      content ''
      position absolute
      display inline-block
      opacity 0
      transition opacity .5s
    &:before
      top 0
      bottom 0
      left 0
      right 0
      background rgba(black, .5)
      border-radius .35rem
    &:after
      border-radius .35rem
      content attr(data-title)
      left 50%
      bottom 50%
      transform translate(-50%, 50%)
      padding 1rem 2rem
      border 2px solid
      text-decoration none
    &:hover:before, &:hover:after
      opacity 1
  &__image
    border-radius .35rem
    margin 2rem 0
    height 100%
    width 100%
    display block
  &__caption
    font-size 1.2rem
    font-weight 100
  &__description
    margin-bottom 2rem
    font-weight 100
    
  