.header
  background -moz-linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
              url('./images/bg.jpg') no-repeat center / cover
  background -webkit-linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
              url('./images/bg.jpg') no-repeat center / cover
  background linear-gradient(top, rgba(0,0,0,0.5), rgba(0,0,0,0.5)),
              url('./images/bg.jpg') no-repeat center / cover
  width 35%
  position fixed
  top 0
  bottom 0
  left 0
  height 100vh
  color #b2b2b2
  @media (max-width 1200px)
    position relative
    text-align center
    width 100%
    max-height 32rem
  &Content
    position absolute
    top 15rem
    right 11%
    text-align right
    font-size 1.5rem
    width 60%
    @media (max-width 1200px)
      position static
      margin 0 auto
      text-align center
      padding-top 4rem
  &__avatar
    border-radius 100%
  &__caption
    line-height 2.5rem
    &_bold
      color #fff
    